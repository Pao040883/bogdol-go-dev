# =============================================================================
# ENVIRONMENT CONFIGURATION - PRODUCTION
# =============================================================================

# Django Settings
DEBUG=0
DJANGO_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-SECRET-KEY-FOR-PRODUCTION

# Allowed Hosts (Production Domains)
# Include: public domain, localhost for debugging, container name for internal health checks
ALLOWED_HOSTS=go-dev.bogdol.gmbh,localhost,127.0.0.1,backend,bogdol_go_prod_backend

# If you serve the frontend from the same domain, set this accordingly.
# Example: https://go-dev.bogdol.gmbh
CORS_ALLOWED_ORIGINS=https://go-dev.bogdol.gmbh

# If you use HTTPS behind nginx, Django needs to trust these origins for CSRF.
# Example: https://go-dev.bogdol.gmbh
CSRF_TRUSTED_ORIGINS=https://go-dev.bogdol.gmbh

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# These variables are used by the Postgres container.
POSTGRES_DB=bogdol_go_production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE-THIS-TO-A-STRONG-PASSWORD

# Database Configuration (Production PostgreSQL)
# Used by Django. Keep in sync with POSTGRES_* above.
DATABASE_URL=postgresql://postgres:CHANGE-THIS-TO-A-STRONG-PASSWORD@db:5432/bogdol_go_production

# =============================================================================
# REDIS & CELERY CONFIGURATION
# =============================================================================

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# BLINK API CONFIGURATION
# =============================================================================

BLINK_USERNAME=your-production-blink-username
BLINK_PASSWORD=your-production-blink-password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EMAIL_HOST=your-production-smtp-host
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@company.com
EMAIL_HOST_PASSWORD=your-production-email-password
DEFAULT_FROM_EMAIL=your-production-email@company.com

# HR Email
HR_EMAIL=hr@company.com

# =============================================================================
# CORS SETTINGS
# =============================================================================

CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL/TLS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry für Production Error Tracking
SENTRY_DSN=your-production-sentry-dsn

# Log Level
LOG_LEVEL=WARNING

# =============================================================================
# ADMIN USER (für automatische Erstellung)
# =============================================================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@company.com
DJANGO_SUPERUSER_PASSWORD=change-me-secure-password

# =============================================================================
# DOCKER PRODUCTION
# =============================================================================

COMPOSE_PROJECT_NAME=bogdol_go_prod

# Flower Basic Auth
FLOWER_BASIC_AUTH=admin:secure-flower-password
