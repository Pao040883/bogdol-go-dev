.absence-details-card {
  margin: 16px;
  
  ion-card-title {
    h2 {
      margin: 0;
      color: var(--ion-color-primary);
    }
  }
  
  ion-icon[size="large"] {
    font-size: 2.5rem;
    color: var(--ion-color-primary);
  }
}

.comments-card {
  margin: 16px;
  
  .comment-form {
    margin-bottom: 16px;
    
    ion-item {
      margin-bottom: 8px;
    }
    
    ion-textarea {
      --background: var(--ion-color-light);
      border-radius: 8px;
    }
  }
}

.comments-list {
  .loading-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 32px;
    flex-direction: column;
    gap: 16px;
  }
  
  .no-comments {
    text-align: center;
    padding: 32px;
  }
  
  .comment-item {
    margin-bottom: 8px;
    
    ion-item {
      --background: var(--ion-color-light);
      border-radius: 8px;
      margin-bottom: 8px;
    }
    
    ion-avatar {
      --background: var(--ion-color-primary);
      
      ion-icon {
        color: white;
        font-size: 1.2rem;
      }
    }
    
    .comment-type-chip {
      margin-left: 8px;
      font-size: 0.75rem;
    }
    
    .comment-content {
      white-space: pre-wrap;
      line-height: 1.4;
      margin: 8px 0;
    }
    
    ion-note {
      font-size: 0.8rem;
    }
  }
}

.ion-color-primary {
  --ion-color-base: var(--ion-color-primary);
  --ion-color-base-rgb: var(--ion-color-primary-rgb);
  --ion-color-contrast: var(--ion-color-primary-contrast);
  --ion-color-contrast-rgb: var(--ion-color-primary-contrast-rgb);
  --ion-color-shade: var(--ion-color-primary-shade);
  --ion-color-tint: var(--ion-color-primary-tint);
}

