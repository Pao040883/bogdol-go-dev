// Responsive Design
@media (max-width: 768px) {
  .absence-details-card,
  .comments-card {
    margin: 8px;
  }
  
  .comment-item {
    ion-avatar {
      width: 32px;
      height: 32px;
    }
    
    .comment-type-chip {
      display: block;
      margin: 4px 0;
    }
  }
}

// Dark mode support
@media (prefers-color-scheme: dark) {
  .comment-item {
    ion-item {
      --background: var(--ion-color-dark);
    }
  }
  
  .comment-form {
    ion-textarea {
      --background: var(--ion-color-dark);
    }
  }
}
